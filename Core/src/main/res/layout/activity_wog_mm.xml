<RelativeLayout
    style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".WogMmActivity">

    <Button
        android:id="@+id/installApkBtn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/installModsBtn"
        android:elevation="1dp"
        android:enabled="false"
        android:maxHeight="25dp"
        android:minHeight="25dp"
        android:padding="10dp"
        android:singleLine="true"
        android:text="install"
        android:textSize="15sp"/>

    <ProgressBar
        android:id="@+id/installProgress"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/installApkBtn"
        android:elevation="0dp"
        android:indeterminate="false"
        android:max="100"
        android:maxHeight="10dp"
        android:minHeight="10dp"
        android:padding="0dp"
        android:progress="0"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/cleanBtn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:enabled="false"
        android:maxHeight="25dp"
        android:minHeight="25dp"
        android:padding="10dp"
        android:singleLine="true"
        android:text="clean"
        android:textSize="15sp"/>

    <Button
        android:id="@+id/installModsBtn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/cleanBtn"
        android:enabled="false"
        android:maxHeight="25dp"
        android:minHeight="25dp"
        android:padding="10dp"
        android:singleLine="true"
        android:text="Setup mods"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/installProgress"
        android:minHeight="15dp"
        android:textSize="15dp"
        android:typeface="normal"/>

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignLeft="@+id/textView"
        android:layout_above="@+id/changeOrderButton"
        android:layout_below="@+id/textView"
        android:fillViewport="false"
        android:measureAllChildren="true"
        android:minWidth="1000dp">

        <org.askerov.dynamicgrid.DynamicGridView
            android:id="@+id/modsGrid"
            android:layout_width="1000dp"
            android:layout_height="wrap_content"
            android:numColumns="1"
            android:columnWidth="1000dp"/>
    </HorizontalScrollView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change order"
        android:id="@+id/changeOrderButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/horizontalScrollView"/>

</RelativeLayout>
